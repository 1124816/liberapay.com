[---]
[---] text/html
% from "templates/macros/auth.html" import auth_button with context

% extends "templates/layouts/base-thin.html"

% block thin_content
    <p>{{ _(
        "{platform} rejected our request to access your data. Reconnecting your "
        "{platform} account should fix the problem.",
        platform=platform.display_name
    ) }}</p>
    % call auth_button(platform.name, 'connect')
        {{ _("Reconnect") }}
    % endcall
% endblock
